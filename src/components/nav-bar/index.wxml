<view 
  class="container {{showBorder ? 'border' : ''}}" 
  style="padding-top: {{bounding.top}}px; padding-right: {{bounding.width + 10}}px; height: {{bounding.top + bounding.height + 6}}px;"
>
  <view 
    class="left-menu"
    wx:if="{{showBack || showHome}}" 
    style="width: {{showBack && showHome ? bounding.width * .8 : bounding.width / 2}}px; height: {{bounding.height * .9}}px;"
  >
    <image class="btn btn-back" wx:if="{{showBack}}" bindtap="navigate" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAeCAYAAAA7MK6iAAAABmJLR0QA/wD/AP+gvaeTAAAAYklEQVRIie3WMQqDUBBF0UP2oMT9L8VOU8XC5WjhL0IqweQr8u4C5sAUw5DS/lq80NdGJywYaqEN3gWd8QwaNOjlUBgLOtmOxeEevxjyz75X3QUPHvx2+Cmvzyde/dlL120FI6M4vKiDCSkAAAAASUVORK5CYII=" />
    <span class="split-line" wx:if="{{showBack && showHome}}"></span>
    <image class="btn btn-home" wx:if="{{showHome}}" bindtap="navigate" data-id="home" src="data:image/png;base64," />
  </view>
  <view 
    class="mid" 
    style="height: {{bounding.height * .8}}px; line-height: {{bounding.height * .8}}px; margin-right: {{!showBack && !showHome && !showSearchBar ? -bounding.width : 10}}px; ">
    <view class="title" wx:if="{{!showSearchBar}}">{{title}}</view>
    <view wx:else class="search-bar" hover-class="hover" bindtap="navigate" data-id="search">
      搜点什么~
    </view>
  </view>
</view>